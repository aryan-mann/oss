{
    "manifest_version": 2,
    "name": "AI Bird",
    "description": "An AI powered extension to improve your emails.",
    "version": "0.2",
    "author": "Aryan Mann",
    "browser_specific_settings": {
        "gecko": {
            "id": "aibird@aryanmann.com",
            "strict_min_version": "78.0"
        }
    },
    "options_ui": {
        "page": "mainPopup/main.html",
        "open_in_tab": false,
        "browser_style": true
    },
    "compose_action": {
        "default_popup": "rewriterPopup/rewriter.html",
        "default_title": "Rewrite | AI Bird",
        "default_icon": "images/icon_128.png"
    },
    "permissions": [
        "messagesRead",
        "compose",
        "storage"
    ],
    "icons": {
        "64": "images/icon_64.png"
    }
}
